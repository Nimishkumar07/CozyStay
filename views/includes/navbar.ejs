                <div class="dropdown-menu mb-2">
                  <a class="dropdown-item" href="/bookings">My Bookings</a>
                  <a class="dropdown-item" href="/bookings/host/manage">Manage Requests</a>
                </div>
              </div>
              <a class="nav-link ms-2 text-center logout" href="/logout">LogOut</a>
              <% } %>
      </div>
    </div>
  </div>
