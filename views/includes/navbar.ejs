<style>
  .search-btn {
    background-color: #FF385C;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }

  .search-btn:hover {
    background-color: #f5202e;
    color: #fff;
  }

  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
    font-size: 0.9rem;
  }

  @media (max-width: 767px) {
    .navDrop {
      /* background-color: rgb(198, 205, 212); */
      padding: 0.75rem;
      border-radius: 0.25rem;
    }
  }

  @media (max-width: 955px) {
    .explore {
      display: none;
    }
