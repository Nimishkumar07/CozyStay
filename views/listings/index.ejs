<% layout('layouts/boilerplate') -%>
<body>
    
<style>
 #filters{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
 }

 .filter{
    text-align: center;
    margin-right: 2rem;
    margin-top: 1.5rem;
    opacity: 0.7;
 }
 
 .filter:hover{
    opacity: 1;
    cursor: pointer;
 }
 .filter p{
    font-size: 0.8rem;
 }

 .tax-info{
    display:none;
 }

 .tax-toggle{
    border: solid black 1px;
    border-radius:  1rem;
    height:3rem;
    padding: 1rem;
    margin-left: 4rem;
    display: flex;
    align-items: center;
 }

@media(min-width:993px) and (max-width:1300px){
   .eight {
    display: none;
  }
   .tax-toggle{
    margin-left: 2rem;
   }
}
@media(min-width:528px) and (max-width:768px){
    .eight {
    display: none;
  }
  .tax-toggle{
    margin-left: 2rem;
   }
   #filters{
    justify-content: space-evenly;
   }
}
@media(max-width:528px){
    .eight {
    display: none;
  }
  .tax-toggle{
    margin-left: 1rem;
   }
   .six,.seven{
    display: none;
   }
   #filters{
    justify-content: space-evenly;
   }
}
@media(max-width:426px){
    .six,.seven{
    display: inline;
   }
}
@media(max-width:394px){
    .six{
        display:none
    }
}
</style>

    <div id="filters">
        <div class="filter one">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter two">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Room</p>
        </div>
        <div class="filter three">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic Cities</p>
        </div>
        <div class="filter four">
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountains</p>
        </div>
        <div class="filter five">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing Pools</p>
        </div>
        <div class="filter six">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castle</p>
        </div>
        <div class="filter seven">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </div>
        
        <div class="filter eight">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farms</p>
        </div>
        <div class="filter eight">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>
         <div class="filter eight">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Domes</p>
        </div>
        <div class="filter eight">
            <div><i class="fa-solid fa-ship"></i></div>
            <p>Boats</p>
        </div>

        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
            </div>
        </div>
    </div>

     <div class="row row-cols-lg-3 row-cols row-cols-sm-1 mt-3">    <!-- row-cols-2 -->
    <% for(let listing of allListing) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card cols listing-card" >
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_img" style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text"><b><%= listing.title %></b> <br>
                        &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                        <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
                    </p>
                </div>
            </div>
        </a>
      <% } %>
    </div>

<script>
    let taxSwitch = document.getElementById("switchCheckDefault")
    taxSwitch.addEventListener("click",()=>{
        let taxInfo = document.getElementsByClassName("tax-info")
        for(info of taxInfo){
            if(info.style.display != "inline"){
                info.style.display = "inline"
            } else {
                info.style.display = "none"
            }
        }
    })
</script>
</body>
